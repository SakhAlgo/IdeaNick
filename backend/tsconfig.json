{
  "ts-node": {
    "files": true,
    "transpileOnly": true,
    "cwd": "."
  },
  "compilerOptions": {
    "allowJs": true,
    // "iterableTypeDeclarations": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": true,
    "isolatedModules": false,
    "lib": ["ES2021"],
    "module": "commonjs",
    // "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2021"
  },

  "include": [
    "./src/**/*.ts"
  ]
}
